
{{#each posts as |post| }}
<div class="row mb-4 post fade-in-body">
  <div class="card blue-grey lighten-2">
    <div class="post">
      <div class="col-md-5">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          <a href="/blogpost/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>
          <!-- Pass needed_funding value to the helper function -->
          <span class="postBody">{{post.body}}</span>
        </p>
        <p class="details">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}