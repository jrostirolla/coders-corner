<!DOCTYPE html>
<html lang="en">
    <head>
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Coder's Corner</title>
      <!-- Materialize framework -->
      <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
      />
      <link 
      rel="stylesheet"
      href="./css/style.css"
      />
      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,500;1,500&display=swap" rel="stylesheet">
    </head>

<body class="fade-in-page">
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1 class="page-title">
        <a href="/">Coders Corner</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <div class="login-c">
          <a href="/profile">Profile</a> |
          <button class="no-button" id="logout">Logout</button>
       </div>
        {{else}}
        <div class="login-c">
          <a href="/login">Login</a>
        </div>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <div class="page-footer">
      <footer>
            <div class="row">
                <div class="column s12">
                    <ul class="center-align">
                        <li><a href="https://github.com/jrostirolla">James</a></li>
                        <li><a href="https://github.com/ahrumnoh">Ahrum</a></li>
                        <li><a href="https://github.com/Wgobrie1">William</a></li>
                    </ul>
                </div>
            </div>
      </footer>
    </div>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
